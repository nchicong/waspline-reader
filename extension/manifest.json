{
  "name": "WaspLine Reader - Dev",
  "version": "1.2.0",
  "description": "Read faster using color gradients",
  "manifest_version": 2,
  "background":{
    "scripts":["bg.js"]
        },
  "browser_action": {
    "default_icon": {
      "16": "icons/wasp16.png",
      "24": "icons/wasp24.png",
      "32": "icons/wasp32.png"
    },
    "default_title": "Apply gradients",
    "default_popup": "menu/index.html"
  },
  "icons": {
    "16": "icons/wasp16.png",
    "48": "icons/wasp48.png",
    "128": "icons/wasp128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "commands": {
    "enable": {
        // "suggested_key": {
        //   "default": "Ctrl+Alt+R"
        //   // "mac": "Command+Option+R"
        // },
        "description": "Enable WaspLine mode",
        "global": false

    }
  }
}
